---
import '@/styles/global.css';

interface Props {
    title?: string;
    description?: string;
}

const { 
    title = 'GardenGym',
    description = 'GardenGym'
} = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.png" />
        <meta name="description" content={description} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body> 
</html>

<style is:global>
    html {
        font-family: 'Montserrat', sans-serif;
    }

    body {
        background-color: white;
        margin: 0;
        padding: 0;
    }
</style>
